# Example Terraform Variables File
# Copy this file to terraform.tfvars and update the values as needed

# General Settings
resource_group_name = "rg-aks-default"
location            = "eastus"

tags = {
  Environment = "Development"
  Project     = "AKS-Default-Network"
  ManagedBy   = "Terraform"
}

# AKS Cluster Settings
cluster_name       = "aks-default-cluster"
dns_prefix         = "aksdefault"
kubernetes_version = null # Uses latest stable version

# Default Node Pool Settings
default_node_pool_name       = "default"
default_node_pool_vm_size    = "Standard_DS2_v2"
default_node_pool_node_count = 2
default_node_pool_min_count  = 1
default_node_pool_max_count  = 5
enable_auto_scaling          = true

# Network Settings (Azure CNI with default networking)
network_plugin    = "azure"
network_policy    = "azure"
load_balancer_sku = "standard"
